# Backend Environment Variables
# Copy this file to .env for local development

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration (Local Development)
CORS_ORIGIN=http://localhost:3000

# Database Configuration (if using MongoDB)
MONGODB_URI=mongodb://localhost:27017/convocam

# JWT Secret (if using authentication)
JWT_SECRET=your-super-secret-jwt-key-here

# Optional: Redis Configuration (if using Redis)
REDIS_URL=redis://localhost:6379

# Optional: Email Configuration (if using email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Optional: Cloud Storage (if using file uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
